<h1>Edit User</h1>

<%= form_for @changeset, Routes.user_path(@conn, :update, @current_user.id), [method: "patch"], fn f -> %>
    <%= if @changeset.action do %>
        <div class="alert alert-danger">
            <p>Oops, something went wrong! Please check the errors below.</p>
        </div>
    <% end %>

    <div>
        <%= select f, :team_id, @teams %>
        <%= error_tag f, :team_id %>
    </div>
    <%= submit "Update" %>
<% end %>
